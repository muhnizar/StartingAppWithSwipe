<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayoutHeader">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/watchmen"
            android:adjustViewBounds="true"
            android:backgroundTintMode="screen"
            android:scaleType="fitXY"
            android:nestedScrollingEnabled="true"
            android:layout_margin="5dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dip"
            android:text="watchmen"
            android:layout_margin="5dip"
            android:id="@+id/textView2"
            android:layout_gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Production Description"
        android:id="@+id/textViewProductDetails"
        android:layout_weight="1"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayoutCurrentlyInCart">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Currently in cart"
            android:id="@+id/textViewCurrentlyInCart"
            android:layout_margin="5dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutAddCart">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:id="@+id/textViewQuantity"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextQuantity"
            android:gravity="right"
            android:inputType="number"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Quantity"
            android:id="@+id/buttonAddToCart"
            android:layout_margin="5dp" />


    </LinearLayout>

</LinearLayout>